package components

import (
	"fmt"
	hometypes "github.com/leapstack-labs/leapsql/internal/ui/features/home/types"
)

// DashboardContent renders the dashboard content.
templ DashboardContent(stats *hometypes.DashboardStats) {
	<div id="model-detail">
		<h1>LeapSQL Dashboard</h1>
		<div class="stats-grid">
			<div class="stat-card">
				<span class="stat-value">{ fmt.Sprint(stats.ModelCount) }</span>
				<span class="stat-label">Models</span>
			</div>
		</div>
	</div>
}
