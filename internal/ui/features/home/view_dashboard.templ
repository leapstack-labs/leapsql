package home

import (
	ui "github.com/leapstack-labs/leapsql/internal/ui/cssgen"
	"fmt"
)

// DashboardContent renders the dashboard content.
templ DashboardContent(stats *DashboardStats) {
	<div id="model-detail">
		<h1>LeapSQL Dashboard</h1>
		<div class={ui.StatsGrid}>
			<div class={ui.StatCard}>
				<span class={ui.StatValue}>{ fmt.Sprint(stats.ModelCount) }</span>
				<span class={ui.StatLabel}>Models</span>
			</div>
		</div>
	</div>
}
